	<div>
		{{#if showAlternate}} <!--Alternate View-->
		{{#each allFoods}}
		<div class="foods" id="{{id}}">
			<h3>{{food_name}}</h3>
			<div class="image_and_like">
				<a href="#"><button type="button" class="btn btn-default like"><span class="glyphicon glyphicon-heart-empty"> like</span></button></a>
				<img src="{{imageFile}}" alt="Food Photos" class="img img-rounded hand imgclicked" data-toggle="modal" data-target="#modal_{{id}}">
				<p>{{likes}} people liked this.</p>
				<p>{{description}}</p>
				<p>uploaded by {{username}}</p>
			</div>      		
			<div class="modal fade" id="modal_{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h2 class="modal-title" id="myModalLabel">{{food_name}}</h2>
					</div>
					<div class="modal-body">
						<div class="image_and_comments">
						<img src="{{imageFile}}" alt="Food Photos" class="img img-rounded">
						<div class="comments">
							<h4>Comments: </h4>
							{{#each comments}}
							<p>{{comment_usr_id}} said "{{comment}}"</p>
							{{/each}}

							<div class="addComment">
								<form id="addCommentForm" role="form" method="get">
					    			<div class="form-group">
	    								<input type="text" class="form-control" id="comment_{{id}}" placeholder="add comments" name="comment">
	    							</div>
	    							<input type="submit" class="btn btn-default addCommentBtn" value="Add Comment"></input>
								</form>
							</div>
						</div>
						</div>
						<h3>{{tags}} <a href="#">get recipe</a></h3>
					</div>
				
					<div class="modal-footer">
        				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      				</div>
	   			</div>
			</div>
		</div>
		{{/each}}



   		{{else}} <!--Default View-->
   		{{#each allFoods}}
		<div class="foods" id="{{id}}">
			<h3>{{food_name}}</h3>
			 <div class="centered-pills">
				<ul class="nav nav-pills">
					<li><a><button type="button" class="btn btn-default like"><span class="glyphicon glyphicon-heart-empty"> like</span></button></a></li>
					<li><a><button type="button" class="btn btn-default clickplz"><span class="glyphicon glyphicon-hand-down"> click pic</span></button></a></li>
				</ul>
				<img src="{{imageFile}}" alt="Food Photos" class="img img-rounded hand imgclicked" data-toggle="modal" data-target="#modal_{{id}}">
      		</div>     		
			<div class="modal fade" id="modal_{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h2 class="modal-title" id="myModalLabel">{{food_name}}</h2>
					</div>
					<div class="modal-body">
						<div class="image_and_comments">
						<img src="{{imageFile}}" alt="Food Photos" class="img img-rounded">
						<div class="comments" id="comments_for_{{id}}">
							<h4>Comments: </h4>
							{{#each comments}}
							<p>{{comment_usr_id}} said "{{comment}}"</p>
							{{/each}}

							<div class="addComment">
								<form id="addCommentForm" role="form" method="get">
					    			<div class="form-group">
	    								<input type="text" class="form-control" id="comment_{{id}}" placeholder="add comments" name="comment">
	    							</div>
	    							<input type="submit" class="btn btn-default addCommentBtn" value="Add Comment"></input>
								</form>
							</div>
						</div>
						</div>
						<h3>{{tags}} <a href="#">get recipe</a></h3>
					</div>
				
					<div class="modal-footer">
        				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      				</div>
	   			</div>
			</div>
			<h5>{{description}}</h5>
			<h5>uploaded by {{username}}</h5>
		</div>
		{{/each}}
   		{{/if}}
	</div>

